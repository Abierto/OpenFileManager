<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/sidenavigation_fragment_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
    </FrameLayout>

    <fragment
            android:id="@+id/main_fragment_container"
            android:name="org.linuxmotion.filemanager.models.fragments.SingleViewFragment"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:layout="@layout/layout_single_main"/>

    <FrameLayout
            android:id="@+id/cut_paste_fragment_container"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>