<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionName="Lunar lynx" 
      package="org.linuxmotion.filemanager" android:versionCode="2">
      
    <uses-sdk android:minSdkVersion="8" />
    <!-- Permission needed for deleting and moving files -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    

    <application android:icon="@drawable/app_icon" android:label="@string/app_name">
        <activity android:name=".openFileManagerActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
                      
        </activity>
		
		<activity android:name=".preferences.ApplicationSettings"
            	android:label="@string/app_name">
            
            </activity>
    </application>
</manifest>